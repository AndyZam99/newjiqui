{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleDetection": "auto",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["./sanity/schemaTypes/**/*.ts", "./sanity/schemaTypes/**/*.tsx"], 
  "exclude": ["node_modules", "./sanity/schemaTypes/entrada.ts"] 
}
